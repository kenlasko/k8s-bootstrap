{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "terraform",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchDatasources": ["terraform-provider", "terraform-module"],
      "registryUrls": ["https://registry.opentofu.org"],
      "matchDepNames": "cilium",
      "customManagers": [
        {
          "customType": "regex",
          "fileMatch": ["kubernetes.tf"],
          "matchStrings": [
            "module \"cilium\" {.*?software_version\\s*=\\s*\"(?<currentValue>.*?)\""
          ],
          "datasourceTemplate": "github-tags",
          "depNameTemplate": "cilium/cilium"
        },
        {
          "customType": "regex",
          "fileMatch": ["kubernetes.tf"],
          "matchStrings": [
            "module \"sealed-secrets\" {.*?software_version\\s*=\\s*\"(?<currentValue>.*?)\""
          ],
          "datasourceTemplate": "github-tags",
          "depNameTemplate": "bitnami-labs/sealed-secrets"
        },
        {
          "customType": "regex",
          "fileMatch": ["kubernetes.tf"],
          "matchStrings": [
            "module \"cert-manager\" {.*?software_version\\s*=\\s*\"(?<currentValue>.*?)\""
          ],
          "datasourceTemplate": "github-tags",
          "depNameTemplate": "cert-manager/cert-manager"
        },
        {
          "customType": "regex",
          "fileMatch": ["kubernetes.tf"],
          "matchStrings": [
            "module \"argocd\" {.*?software_version\\s*=\\s*\"(?<currentValue>.*?)\""
          ],
          "datasourceTemplate": "github-tags",
          "depNameTemplate": "argoproj/argo-cd"
        }
      ]
    }
  ]
}
