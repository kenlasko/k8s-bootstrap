{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^kubernetes.tf$"],
      "matchStrings": [
        "cilium_version\\s*=\\s*\"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cilium/cilium"
    },
    {
      "customType": "regex",
      "fileMatch": ["^kubernetes.tf$"],
      "matchStrings": [
        "modules\/sealed-secrets\"\\n\\s*software_version\\s*=\\s*\"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "bitnami-labs/sealed-secrets"
    }
  ]
}
